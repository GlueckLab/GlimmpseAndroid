<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/home_screen_gray" >

    <TextView
        android:id="@+id/version_textView_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/version"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_textView_home"
        android:layout_width="280dp"
        android:layout_height="290dp"
        android:layout_alignLeft="@+id/version_textView_home"
        android:layout_below="@+id/version_textView_home"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="3dp"
        android:text="@string/description_home"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp" >

        <Button
            android:id="@+id/start_button_home"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/start_button_selector"
            android:text="@string/design_home"
            android:textColor="@color/button_label_white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/learn_more_button_home"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/start_button_home"
            android:layout_alignParentBottom="true"
            android:background="@drawable/learn_more_button_selector"
            android:text="@string/learn_more_home"
            android:textColor="@color/learn_more_button_label_color"
            android:textSize="19dp"
            android:textStyle="bold"
            android:typeface="serif" />
    </RelativeLayout>

</RelativeLayout>