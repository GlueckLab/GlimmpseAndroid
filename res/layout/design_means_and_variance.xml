<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/design_item"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:orientation="horizontal" >
    
	   <TextView
	       android:id="@+id/description_textView_means_and_variance"
	       android:layout_width="274dp"
	       android:layout_height="30dp"
	       android:layout_alignParentTop="true"
	       android:layout_centerHorizontal="true"                
	       android:layout_marginTop="10dp"
	       android:text="@string/description_means_and_variance"
	       android:textAppearance="?android:attr/textAppearanceMedium"
	       android:textColor="@color/black"
	       android:textSize="11dp" />
	      
	           
	    <ListView
	        android:id="@+id/means_and_variance_list_view"
	        android:layout_width="match_parent"
	        android:layout_height="350dp"
	        android:layout_below="@+id/description_textView_means_and_variance"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="5dp"
	        android:cacheColorHint="#0000"
	        android:headerDividersEnabled="true"
	        android:textColor="@color/black"                          
	        >
	    </ListView>
    

    
        <Button
        android:id="@+id/back_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:text="@string/back_button_label"
        android:textColor="@color/button_label_black"
        android:layout_alignParentBottom="true" 
        android:textSize="15dp" />
    </RelativeLayout>

</LinearLayout>