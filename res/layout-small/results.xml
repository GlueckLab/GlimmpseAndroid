<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:scrollbars="vertical" >

    <ListView
        android:id="@+id/results_list_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:cacheColorHint="#0000"
        android:dividerHeight="1dp"
        android:headerDividersEnabled="true"
        android:textColor="@color/black" >
    </ListView>

    <Button
        android:id="@+id/back_button"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/results_list_view"
        android:layout_centerHorizontal="true"
        android:background="@drawable/back_button_selector"
        android:text="@string/back_button_label"
        android:textColor="@color/button_label_black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/save_email_button"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/back_button"
        android:layout_below="@+id/back_button"
        android:layout_marginTop="23dp"
        android:background="@drawable/back_button_selector"
        android:text="@string/email_button_label"
        android:textColor="@color/button_label_black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:typeface="serif" />

</RelativeLayout>