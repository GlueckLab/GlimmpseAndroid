<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="2dp"
    android:background="@color/white" >

    <TextView
        android:id="@+id/description_textView_group_count"
        android:layout_width="274dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/description_group_count"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="11dp" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description_textView_group_count"
        android:layout_below="@+id/description_textView_group_count"
        android:layout_marginTop="22dp"
        android:max="@string/defined_max_groups"
        android:minWidth="300px" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/seekbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="@string/back_button_label"
        android:textColor="@color/button_label_black"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/see_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back_button"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/seekbar"
        android:text="@string/default_groups"
        android:textColor="@color/black"
        android:textSize="15dp" />

</RelativeLayout>