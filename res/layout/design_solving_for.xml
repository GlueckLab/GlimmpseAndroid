<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="2dp"
    android:background="@color/white" >

    <TextView
        android:id="@+id/description_textView_solving_for"
        android:layout_width="274dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="3dp"
        android:text="@string/description_solving_for"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <!-- <Button
        android:id="@+id/back_button"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/radioGroup_solvingFor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:background="@drawable/back_button_selector"
        android:text="@string/back_button_label"
        android:textColor="@color/button_label_black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:typeface="serif" /> -->

    <RadioGroup
        android:id="@+id/radioGroup_solvingFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_textView_solving_for"
        android:layout_centerHorizontal="true" >

        <RadioButton
            android:id="@+id/radio_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:lineSpacingExtra="3dp"
            android:tag="@string/power"
            android:text="@string/power"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/radio_sample_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:tag="@string/sample_size"
            android:text="@string/sample_size"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </RadioGroup>

</RelativeLayout>