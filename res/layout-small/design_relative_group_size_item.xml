<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp" >

    <RelativeLayout
        android:id="@+id/design_item"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/see_progress"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/default_relative_group_size"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="6dp" />

        <TextView
            android:id="@+id/list_item_textView_relative_group_size"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:text="Hello World"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <SeekBar
            android:id="@+id/relativeSize"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/see_progress"
            android:layout_toLeftOf="@+id/see_progress"
            android:max="@string/defined_max_relative_group_size" />

    </RelativeLayout>

</LinearLayout>